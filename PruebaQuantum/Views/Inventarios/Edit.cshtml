@model Factory.Producto
@{ 
    ViewBag.Title = "";
    if (Model != null)
    {
        ViewBag.Title = "Editar producto " + Model.Nombre;
    }
}
<div class="card">
    <div class="header"> @ViewBag.Title</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="body">
            <div style="padding:20px">
                 @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
            <div style="padding:20px">
                @Html.LabelFor(model => model.ValorVentaConIva, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ValorVentaConIva, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ValorVentaConIva, "", new { @class = "text-danger" })
             </div>
            <div style="padding:20px">
                @Html.LabelFor(model => model.CantidadUnidadesInventario, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.CantidadUnidadesInventario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CantidadUnidadesInventario, "", new { @class = "text-danger" })
            </div>
            <div style="padding:20px">
                @Html.LabelFor(model => model.PorcentajeIVAAplicado, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.PorcentajeIVAAplicado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PorcentajeIVAAplicado, "", new { @class = "text-danger" })
            </div>
            <div style="padding:20px">
                <input type="submit" value="Save" class="button" style="width:100%" />
            </div>
        </div>
    }
</div>
  
<div style="padding:20px">
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
