@model IEnumerable<Factory.Usuario>

@{
    ViewBag.Title = "Listado de usuarios";
}
@if (Model != null)
{
<div style="padding-bottom :20px">
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "button" })
</div>
<div  class="card" >
    <div class="header">@ViewBag.Title</div>
    <div class="body" style="overflow:scroll" >
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoIdentificacion.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Identificacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perfil.Nombre)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentificacion.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificacion)
                    </td>
                    <td>   
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                    </td>    
                    <td>
                        @Html.DisplayFor(modelItem => item.Perfil.Nombre)
                    </td>
                    <td>        
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "buttonCol" })       
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
}